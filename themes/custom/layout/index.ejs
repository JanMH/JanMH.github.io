<%- partial('_partials/header', {image: config.main_image, title: config.title,
subtitle: config.subtitle }) %>
<main>
  <div class="posts">
    <h1>Posts</h1>

    <p class="post-list">
      <% site.posts.sort('date', -1).forEach(function(post){ %>
        <article class="post-preview">
          <a class="post-link" href="<%= url_for(post.path) %>"><%= post.title %></a>
          <div class="post-excerpt"><%- post.description || post.excerpt %></div>
        </article>
      <% }); %>
    </p>
  </div>
</main>
<%- partial('_partials/footer')%>
