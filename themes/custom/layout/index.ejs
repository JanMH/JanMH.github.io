<%- partial('_partials/header', {image: config.main_image, title: config.title, subtitle: config.subtitle }) %>
<main>
  <div class="posts">
    <h1>Posts</h1>

    <% site.posts.sort('date', -1).forEach(function(post){ %>
      <article class="post-preview">
        <h1><a href="<%= url_for(post.path) %>"><%= post.title %></a></h1>
        <p class="post-excerpt"><%- post.description || post.excerpt %></p>
      </article>
    <% }); %>
  </div>
</main>
